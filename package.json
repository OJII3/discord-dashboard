{
	"name": "discord-dashboard",
	"scripts": {
		"dev": "turbo dev",
		"deploy": "wrangler deploy --minify",
		"build": "turbo build",
		"build:pages": "cd apps/app-pages npx next build",
		"lint": "biome check .",
		"fmt": "biome check . --write",
		"check-types": "turbo check-types",
		"check": "bun lint && turbo check-types"
	},
	"workspaces": ["apps/*"],
	"dependencies": {
		"app-workers": "workspace:*",
		"app-pages": "workspace:*",
		"@biomejs/biome": "^1.9.4",
		"@hono/zod-validator": "^0.4.2",
		"hono": "^4.6.14",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"turbo": "^2.3.3",
		"typescript": "^5.7.2",
		"wrangler": "^3.88.0"
	},
	"packageManager": "bun@1.1.38"
}
